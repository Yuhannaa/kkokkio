<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="span6">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="hero-unit">
    <h1>꼬끼오 스토리</h1>
    <p>Share your daily life with friends</p>
    <p>
      <%= link_to "Sign up", signup_path, class: "btn btn-primary btn-large" %>
    </p>
  </div>
  <%= render 'layouts/footer' %>
<% end %> 